<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".TicketClosedDetailPage2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Closed Ticket Detail"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/blue_primary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issue Identified:"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ticketIssue_detail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/border"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:drawablePadding="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Action Taken:"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/ticketAction_detail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/border"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:drawablePadding="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/previousPage_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Previous Page"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        app:cornerRadius="20dp"/>

    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Close Page"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        app:cornerRadius="20dp"/>

</LinearLayout>